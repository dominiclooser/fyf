extends _base

block content
   .container
      p#intro Willkommen beim Übungsmarathon FYF! 10 Aufgaben, jede Woche eine neue, um deine sozialen Ängste zu konfrontieren und zu schwächen.  

      div Aktuelle Übung:

      - var task1 = tasks[1]
         .task.current
            p Übung Zwei / Deadline 14. August 2016
            h2 
               span.fa.fa-beer
               span= task1.title
            p.description= task1.description

      div Bisherige Übungen:

      - var task0 = tasks[0]
         .task
            p Übung Eins / Deadline 7. August 2016
            h2 
               span.fa.fa-clock-o
               span= task0.title
            p.description= task0.description

