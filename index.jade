extends _base

block content
   .container
      p#intro Willkommen beim Übungsmarathon FYF! 10 Aufgaben, jede Woche eine neue, um deine sozialen Ängste zu konfrontieren und zu schwächen.  

      h2 Aktuelle Übung:

      .task.current

      h2 Bisherige Übungen:

      for task, index in tasks.reverse()
         - number = tasks.length - index
         .task(data-number=number, class='hidden')
            p Übung #{number}
            h2 
               if task.icon
                  span(class='fa' class='fa-' + task.icon)
               span= task.title
            p.description= task.description

